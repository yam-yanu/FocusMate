<% if current_user.group_id == 0 %>
	<%= render 'layouts/make_group_modal' %>
<% else %>
	<%= render 'layouts/invite_modal' %>
<% end %>
<div class="col-md-3 col-sm-4 hidden-xs">
	<div id="right_bar">
		<h4>メイト一覧</h4>
		<table class="table table-bordered table-hover ">
			<tbody>
				<% if @user_list %>
					<% @user_list.each do |user_list| %>
						<tr class="active user_information" data-id = "<%= user_list.id %>" data-passed_time = "<%= Time.now - user_list.updated_at %>">
							<td><%= image_tag(user_list.image, :size => "28x28", :alt => "アイコン" ,:class => "showStatus",:"data-user_id" => user_list.id)%>
								<% if user_list.id == current_user.id %>
									<%= link_to user_list.name,{:controller =>"actions",:action =>"me"},{:class => "showStatus",:"data-user_id" => user_list.id}%>
								<% else %>
									<%= link_to user_list.name,{:controller =>"actions",:action =>"show",:id =>user_list.id},{:class => "showStatus",:"data-user_id" => user_list.id} %>
								<% end %>
							</td>
							<td style="text-align: right;">
								<% latest_logined_at = ((Time.now - user_list.updated_at)/3600) %>
								<% if latest_logined_at < 1 %>
									<%= ((Time.now - user_list.updated_at)/60).to_i %>分前
								<% elsif latest_logined_at <= 24 %>
									<%= latest_logined_at.to_i %>時間前
								<% end %>
							</td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
		<% if current_user.group_id != 0 %>
			<a href="#invite_modal" data-toggle="modal">
				<button type="button" class="btn btn-info radius-large-btn group-btn"><i class="fa fa-group"></i>他のメンバーを招待</button>
			</a>
		<% else %>
			<a href="#make_groupModal" data-toggle="modal">
				<button type="button" class="btn btn-info radius-large-btn group-btn"><i class="fa fa-plus"></i> グループを作成</button>
			</a>
			<a href="/groups">
				<button type="button" class="btn btn-info radius-large-btn group-btn"><i class="fa fa-search"></i> グループを探す</button>
			</a>
		<% end %>
	</div>
</div>